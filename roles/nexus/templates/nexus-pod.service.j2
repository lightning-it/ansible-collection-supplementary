[Unit]
Description=Nexus Repository Pod (Podman)
After=network-online.target
Wants=network-online.target

[Service]
Restart=always
ExecStart=/usr/bin/podman kube play {{ nex_pod_manifest_path }}
ExecStop=/usr/bin/podman kube down {{ nex_pod_manifest_path }}
TimeoutStopSec=30
User=root

[Install]
WantedBy=multi-user.target
