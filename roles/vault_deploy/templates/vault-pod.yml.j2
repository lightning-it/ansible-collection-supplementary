apiVersion: v1
kind: Pod
metadata:
  name: {{ vault_deploy_pod_name }}
  labels:
    app: vault
spec:
  containers:
    - name: vault
      image: {{ vault_deploy_image }}
      args:
        - "server"
      ports:
        - containerPort: {{ vault_deploy_port }}
          hostPort: {{ vault_deploy_port }}
          hostIP: {{ vault_deploy_host_ip }}
      env:
        - name: VAULT_ADDR
          value: "https://0.0.0.0:{{ vault_deploy_port }}"
{% if vault_deploy_skip_setcap | bool %}
        - name: SKIP_SETCAP
          value: "1"
{% endif %}
      securityContext:
        runAsUser: {{ vault_deploy_run_as_user }}
        runAsGroup: {{ vault_deploy_run_as_group }}
        runAsNonRoot: {{ vault_deploy_run_as_non_root | bool | ternary('true', 'false') }}
{% if vault_deploy_add_ipc_lock_cap | bool %}
        capabilities:
          add:
            - CAP_IPC_LOCK
{% endif %}
      volumeMounts:
        - name: data
          mountPath: {{ vault_deploy_container_data_dir }}
        - name: certs
          mountPath: /vault/certs
        - name: vault-config
          mountPath: /vault/config
  volumes:
    - name: data
      hostPath:
        path: {{ vault_deploy_host_data_dir }}
        type: Directory
    - name: vault-config
      hostPath:
        path: "{{ vault_deploy_config_dir }}"
        type: DirectoryOrCreate
    - name: certs
      hostPath:
        path: {{ vault_deploy_cert_dir }}
        type: Directory
