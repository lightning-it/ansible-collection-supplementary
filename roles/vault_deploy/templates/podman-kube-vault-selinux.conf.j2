[Service]
ExecStartPost=/bin/sh -c 'label="$(podman inspect {{ vault_deploy_container_name | default(vault_deploy_pod_name ~ "-vault") }} --format "{{ '{{.MountLabel}}' }}")"; if [ -n "$label" ]; then level="${label#*:*:*:}"; chcon -R -t container_file_t -l "$level" {{ vault_deploy_host_data_dir }} {{ vault_deploy_cert_dir }} {{ vault_deploy_config_dir }} || true; fi'
