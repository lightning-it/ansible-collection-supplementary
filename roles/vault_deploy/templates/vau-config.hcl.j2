storage "file" {
  path = "{{ vault_container_data_dir }}"
}

listener "tcp" {
  address     = "0.0.0.0:{{ vault_port }}"
  tls_cert_file = "/vault/certs/vault.crt"
  tls_key_file  = "/vault/certs/vault.key"
}

ui            = true
disable_mlock = true
api_addr      = "https://127.0.0.1:{{ vault_port }}"
