{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>lightning-it/shared-assets//ansible-collection/base/renovate.base.json"
  ],
  "regexManagers": [
    {
      "description": "lit.foundational dependency (min version) in galaxy.yml",
      "fileMatch": ["^galaxy\\.yml$"],
      "matchStrings": [
        "lit\\.foundational:\\s*\"?>=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+),<2\\.0\\.0\"?"
      ],
      "datasourceTemplate": "galaxy-collection",
      "packageNameTemplate": "lit.foundational",
      "versioningTemplate": "pep440"
    }
  ]
}
